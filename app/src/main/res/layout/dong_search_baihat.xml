<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:scaleType="fitXY"
        android:layout_margin="3dp"
        android:id="@+id/imageviewSearch"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:id="@+id/textviewSearch"
        android:textSize="18sp"
        android:text="Ten Bai Hat"
        android:layout_toRightOf="@id/imageviewSearch"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#0a0a0a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textviewSearchCaSi"
        android:textSize="18sp"
        android:text="Ten Ca Si"
        android:layout_below="@+id/textviewSearch"
        android:layout_toRightOf="@id/imageviewSearch"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="#6e6d6d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewSearchLuotThich"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>